package pkg2309179_ghefira.azka.fatharani_tugas5_no1;

/**
 *
 * @author FARIZ
 */
import java.util.Scanner;
public class AzkaFatharani_Tugas5_No1 {

    /**
     * @param N
     */
    public static void myMethod (int N) {
         int jumlah=0;
         for(int i=1; i<=N; i++){
             jumlah=jumlah+i;
             System.out.print(i+"+");
         }
         System.out.println("="+jumlah);
    }
    
    public static void main(String[] args){
        Scanner scanObjk=new Scanner(System.in);
        System.out.print("Masukkan Nilai N: ");
        int N=scanObjk.nextInt();
        
        myMethod(N);
        
    }
    
}
